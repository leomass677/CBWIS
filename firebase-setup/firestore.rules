{
  "rules": {
    "users": {
      "$uid": {
        ".read": "auth.uid == $uid || root.child('users').child(auth.uid).child('role').val() == 'admin'",
        ".write": "auth.uid == $uid || root.child('users').child(auth.uid).child('role').val() == 'admin'",
        ".validate": "newData.hasChildren(['username', 'role', 'createdAt'])"
      }
    },
    "inventory": {
      ".read": "auth != null",
      ".write": "root.child('users').child(auth.uid).child('role').val() == 'admin'",
      "$itemId": {
        ".validate": "newData.hasChildren(['itemName', 'category', 'quantity', 'unitPrice']) && newData.child('quantity').isNumber() && newData.child('unitPrice').isNumber()"
      }
    },
    "transactions": {
      ".read": "auth != null",
      ".write": "auth != null",
      "$transactionId": {
        ".validate": "newData.hasChildren(['itemId', 'transactionType', 'quantity', 'performedBy', 'timestamp']) && newData.child('transactionType').val() in ['IN', 'OUT'] && newData.child('quantity').isNumber()"
      }
    }
  }
}
